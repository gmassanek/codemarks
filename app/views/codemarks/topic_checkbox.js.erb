var chb = $("#topic_chb_<%= @topic.slug %>");
$("#save_codemark").removeAttr('disabled');

if (chb.length == 0) {
  $("#topic_tags").append("<%= escape_javascript(render '/codemarks/topic_tag_item', :topic => @topic, :topic_name => @topic_name) %>");
} else {
  chb.closest("li").effect("highlight", {}, 2000);
}
$("#fetch").removeAttr("disabled");
$("#link_form_topic_autocomplete").val("");
$("#link_form_topic_slug").val("");
prepareTagDeletes();
